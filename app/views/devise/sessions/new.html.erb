<%= form_for(resource, as: resource_name,:class=>"form-horizontal", url: session_path(resource_name)) do |f| %>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="margin-left: 41px">
                <h2>Log in</h2>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <!-- <label for="email">E-Mail Address</label> -->
            <%= f.label :email %><br />
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                     <!--    <input type="text" name="email" class="form-control" id="email"
                               placeholder="you@example.com" required autofocus> -->
                               <%= f.email_field :email, autofocus: true, :class=>"form-control",:placeholder=>"you@example.com" %>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                            <!-- Put e-mail validation error messages here -->
                        </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <!-- <label for="password">Password</label> -->
                <%= f.label :password %><br />
            </div>
            <div class="col-md-6">
                <div class="form-group has-danger">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                        <!-- <input type="password" name="password" class="form-control" id="password"
                               placeholder="Password" required> -->
                        <%= f.password_field :password, autocomplete: "current-password",:class=>"form-control",:placeholder=>"Password" %>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-control-feedback">
                        <span class="text-danger align-middle">
                            <!-- <i class="fa fa-close"> Example Error Message</i> -->
                        </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 field-label-responsive">
                <!-- <label for="password">Confirm Password</label> -->
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                        <div class="input-group-addon" style="width: 2.6rem">
                            <i class="fa fa-repeat"></i>
                        </div>
<!--                         <input type="password" name="password-confirmation" class="form-control"
                               id="password-confirm" placeholder="Password" required> -->
                               <% if devise_mapping.rememberable? -%>
                                <div class="field">
                                  <%= f.check_box :remember_me %>
                                  <%= f.label :remember_me %>
                                </div>
                              <% end -%>&nbsp;&nbsp;&nbsp;
                              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                            <% end -%>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="margin-left: 44px">
<!--                 <button type="submit" class="btn btn-success"><i class="fa fa-user-plus"></i> Register</button> -->
              <%= f.submit "Log in", :class =>  "btn btn-success" %>
            </div>
        </div>
