<%= bootstrap_form_with(model: resource, url: password_path(resource), local: true) do |f| %>
  <h2>Forgot your password?</h2>
  <hr>
  <%= f.email_field :email, autofocus: true, placeholder: "you@example.com" %>
  <%= f.submit "Send me reset password instructions", class: "btn btn-success" %>
<% end %>
